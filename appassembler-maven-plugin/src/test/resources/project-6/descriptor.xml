 <daemon>
   <mainClass>com.company.example.App</mainClass>
   <configurationDirectory>conf</configurationDirectory>
   <environmentSetupFileName>app-env</environmentSetupFileName>
   <generatorConfigurations>
     <generatorConfiguration>
       <generator>jsw</generator>
       <configuration>       
         <configuration.directory.in.classpath.first>etc1</configuration.directory.in.classpath.first>
         <configuration.directory.in.classpath.last>etc2</configuration.directory.in.classpath.last>         
         <!-- remove a built in one -->
         <wrapper.console.format/>
         <!-- change a built in one -->
         <wrapper.console.loglevel>WARN</wrapper.console.loglevel>
         <app.base.envvar>MY_BASE</app.base.envvar>        
       </configuration>
       <includes>
         <include>macosx-x86-universal-32</include>
         <include>linux-x86-32</include>
         <include>solaris-sparc-64</include>
         <include>windows-x86-32</include>
      </includes>
     </generatorConfiguration>
   </generatorConfigurations>
   <repositoryName>lib</repositoryName>
 </daemon>