<model>
  <id>appassembler-model</id>
  <name>AppassemblerModel</name>
  <defaults>
    <default>
      <key>package</key>
      <value>org.codehaus.mojo.appassembler.model</value>
    </default>
  </defaults>
  <classes>
    <class rootElement="true">
      <name>Daemon</name>
      <version>1.0.0+</version>
      <fields>
        <field>
          <name>id</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>mainClass</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>classpath</name>
          <version>1.0.0+</version>
          <association>
            <type>ClasspathElement</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>commandLineArguments</name>
          <version>1.0.0+</version>
          <association>
            <type>String</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>jvmSettings</name>
          <version>1.0.0+</version>
          <association>
            <type>JvmSettings</type>
          </association>
        </field>
        <field>
          <name>environmentSetupFileName</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
      </fields>
    </class>
    <class>
      <name>JvmSettings</name>
      <version>1.0.0+</version>
      <fields>
        <field>
          <name>initialMemorySize</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>maxMemorySize</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>maxStackSize</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>systemProperties</name>
          <version>1.0.0+</version>
          <association>
            <multiplicity>*</multiplicity>
            <type>String</type>
          </association>
        </field>
        <field>
          <name>extraArguments</name>
          <version>1.0.0+</version>
          <association>
            <multiplicity>*</multiplicity>
            <type>String</type>
          </association>
        </field>
      </fields>
    </class>
    <class>
      <name>ClasspathElement</name>
      <version>1.0.0+</version>
      <fields>
        <field>
          <name>relativePath</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
      </fields>
    </class>
    <class>
      <name>Dependency</name>
      <superClass>ClasspathElement</superClass>
      <version>1.0.0+</version>
      <fields>
        <field>
          <name>groupId</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>artifactId</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>version</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
        <field>
          <name>classifier</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
      </fields>
    </class>
    <class>
      <name>Directory</name>
      <superClass>ClasspathElement</superClass>
      <version>1.0.0+</version>
    </class>
  </classes>
</model>
